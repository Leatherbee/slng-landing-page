---
const { variant = "closed" } = Astro.props;

const isOpen = variant === "open";
const isLong = variant === "long";
---
<div class="rounded-[2rem] bg-white/90 shadow-phone ring-1 ring-black/10 overflow-hidden w-[260px] md:w-[280px]">
  <!-- top bar -->
  <div class="relative h-9 bg-sand-50/60">
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-28 h-6 bg-black rounded-full"></div>
  </div>

  <!-- screen -->
  <div class="px-5 py-6">
    <h2 class="font-display text-xl md:text-2xl font-black tracking-tight">I'm so done<br/>w/ y'all</h2>
    <hr class="my-4 border-sand-200" />
    <p class="font-body text-[15px] text-slate-700">
      I'm fed up with you<br/>all
    </p>

    <div class="mt-4">
      {isOpen ? (
        <button class="inline-flex items-center justify-center rounded-lg bg-black text-white text-sm px-4 py-2">
          Close Detected Slang (3)
        </button>
      ) : (
        <button class="inline-flex items-center justify-center rounded-lg bg-black text-white text-sm px-4 py-2">
          Show Detected Slang (3)
        </button>
      )}
    </div>

    {isOpen && (
      <div class="mt-4">
        <p class="text-xs text-slate-500">Slang detected (3)</p>
        <ul class="mt-2 space-y-2">
          <li class="flex items-center justify-between rounded-lg border border-sand-200 px-3 py-2">Y'all <span class="text-slate-400">›</span></li>
          <li class="flex items-center justify-between rounded-lg border border-sand-200 px-3 py-2">w/ <span class="text-slate-400">›</span></li>
          <li class="flex items-center justify-between rounded-lg border border-sand-200 px-3 py-2">so done <span class="text-slate-400">›</span></li>
        </ul>
      </div>
    )}

    {isLong && (
      <div class="mt-2">
        <p class="font-display text-2xl text-slate-400 rotate-90 origin-left h-52 whitespace-pre leading-[1.15]">I'm fed up with
you all</p>
      </div>
    )}

    <div class="mt-6">
      <button class="w-full rounded-full bg-slate-900 text-white font-semibold py-3">Try Another</button>
    </div>
  </div>

  <!-- bottom bar -->
  <div class="px-5 pb-5">
    <div class="mt-3 grid grid-cols-3 text-center text-xs text-slate-600">
      <div>Translate</div>
      <div>Keyboard</div>
      <div>Dictionary</div>
    </div>
  </div>
</div>