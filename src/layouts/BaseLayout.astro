---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
const { title = "SLNG", description = "Landing page for the SLNG iOS app" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Merriweather:wght@700;900&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-sand-50 text-slate-900 antialiased">
    <main>
      <Navbar />
      <slot />
    </main>
    <footer class="border-t border-sand-200">
      <div class="mx-auto max-w-6xl px-6 py-8 flex flex-col gap-3 md:flex-row md:items-center md:justify-between text-sm text-slate-600">
        <div>Â© 2025 SLNG. All rights reserved.</div>
        <div class="flex gap-4">
          <a href="/terms" class="hover:text-slate-900">Terms of Use</a>
          <a href="/privacy" class="hover:text-slate-900">Privacy Policy</a>
        </div>
      </div>
    </footer>
  </body>
  </html>